{
	"compilerOptions": {
		"module"                : "commonjs",
		"target"                : "es2018",
		"lib"                   : ["es2018", "esnext.asynciterable"],
		"sourceMap"             : true,
		"emitDecoratorMetadata" : true,
		"experimentalDecorators": true,
		"outDir"                : "./dist",
		"resolveJsonModule"     : true,
		"esModuleInterop"       : true
	},
	"exclude"        : [
		"node_modules"
	],
	"include"        : [
		"./src/**/*"
	]
}